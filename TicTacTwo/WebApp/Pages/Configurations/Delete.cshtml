@page "{configName}"
@model DeleteModel

@{
    ViewData["Title"] = $"Delete Configuration: {Model.ConfigName}";
}

<h2 class="text-center text-danger">
    @ViewData["Title"]
</h2>
<hr/>
<div class="alert alert-warning text-center" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this configuration?</h4>
    <p>This action is permanent and cannot be undone. Please confirm your decision to delete.</p>
</div>

<div class="text-center">
    <form method="post" class="d-inline-block">
        <button type="submit" class="btn btn-lg btn-danger">Delete</button>
    </form>
    <a asp-page="./Index" class="btn btn-lg btn-outline-secondary ms-2">Back to List</a>
</div>
