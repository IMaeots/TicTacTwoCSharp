@page
@model WebApp.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SaveGame[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaveGame[0].Configuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaveGame[0].JsonGameStates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaveGame[0].PasswordP1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaveGame[0].PasswordP2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SaveGame) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Configuration.JsonConfiguration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JsonGameStates)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordP1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordP2)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
