@page
@model SetupModel

@{
    ViewData["Title"] = "Create New Game";
}

<h1>@ViewData["Title"]</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger no-bullet"></div>

            <div class="form-group">
                <label asp-for="GameName" class="control-label"></label>
                <input asp-for="GameName" class="form-control"/>
                <span asp-validation-for="GameName" class="text-danger no-bullet"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfigurationName" class="control-label"></label>
                <select asp-for="ConfigurationName" class="form-select" asp-items="Model.ConfigurationNames"
                        id="ConfigurationName">
                    <option value="">Select Game Configuration</option>
                </select>
                <span asp-validation-for="ConfigurationName" class="text-danger no-bullet"></span>
            </div>

            <div class="form-group" id="passwordP1Field">
                <label asp-for="PasswordP1" class="control-label"></label>
                <input asp-for="PasswordP1" class="form-control"/>
                <span asp-validation-for="PasswordP1" class="text-danger no-bullet"></span>
            </div>

            <div class="form-group" id="passwordP2Field">
                <label asp-for="PasswordP2" class="control-label"></label>
                <input asp-for="PasswordP2" class="form-control"/>
                <span asp-validation-for="PasswordP2" class="text-danger no-bullet"></span>
            </div>

            <br/>
            <div class="form-group">
                <input type="submit" value="Create & Play" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br/>
<div class="text-start">
    <a asp-page="/Index" class="btn btn-outline-secondary">Back to Home</a>
</div>