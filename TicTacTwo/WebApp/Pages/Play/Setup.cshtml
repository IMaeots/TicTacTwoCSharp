@page
@model WebApp.Pages.Play.Setup

@{
    ViewData["Title"] = "New Game";
}

<h1>@ViewData["Title"]</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SaveGame.Name" class="control-label"></label>
                <input asp-for="SaveGame.Name" class="form-control"/>
                <span asp-validation-for="SaveGame.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaveGame.ConfigurationId" class="control-label"></label>
                <select asp-for="SaveGame.ConfigurationId" class="form-control"
                        asp-items="ViewBag.ConfigurationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SaveGame.JsonGameStates" class="control-label"></label>
                <input asp-for="SaveGame.JsonGameStates" class="form-control"/>
                <span asp-validation-for="SaveGame.JsonGameStates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaveGame.PasswordP1" class="control-label"></label>
                <input asp-for="SaveGame.PasswordP1" class="form-control"/>
                <span asp-validation-for="SaveGame.PasswordP1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaveGame.PasswordP2" class="control-label"></label>
                <input asp-for="SaveGame.PasswordP2" class="form-control"/>
                <span asp-validation-for="SaveGame.PasswordP2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create & Play" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-page="/Index">Back to Home</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
